generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Trade {
  id         BigInt   @id
  userId     String   @map("user_id")
  symbol     String
  sector     String   @default("Technology")
  status     String   @default("Running")
  buyPrice   Decimal  @map("buy_price")
  qty        Decimal
  sl         Decimal
  target     Decimal?
  buyDate    DateTime @map("buy_date") @db.Date
  reason     String?
  timing     String?
  imageUrl   String?  @map("image_url")
  chartLink  String?  @map("chart_link")
  tags       String?
  exitPrice  Decimal? @map("exit_price")
  exitDate   DateTime? @map("exit_date") @db.Date
  deployed   Decimal?
  createdAt  DateTime @default(now()) @map("created_at")

  @@map("trades")
}

model IpoAccount {
  id             BigInt      @id
  userId         String      @map("user_id")
  holderName     String      @map("holder_name")
  pan            String?
  dematName      String?     @map("demat_name")
  dematProvider  String      @default("Zerodha") @map("demat_provider")
  dematId        String?     @map("demat_id")
  bank           String?
  upiId          String?     @map("upi_id")
  phone          String?
  email          String?
  category       String      @default("Retail")
  notes          String?
  createdAt      DateTime    @default(now()) @map("created_at")
  ipoRecords     IpoRecord[]

  @@map("ipo_accounts")
}

model IpoRecord {
  id                BigInt      @id
  userId            String      @map("user_id")
  companyName       String      @map("company_name")
  symbol            String?
  year              String
  exchange          String      @default("NSE + BSE")
  sector            String      @default("Technology")
  ipoPrice          Decimal     @map("ipo_price")
  lotSize           Decimal?    @map("lot_size")
  lotsApplied       Decimal?    @map("lots_applied")
  allotted          String      @default("Yes")
  qtyAllotted       Decimal?    @map("qty_allotted")
  amountApplied     Decimal?    @map("amount_applied")
  amountPaid        Decimal?    @map("amount_paid")
  listingDate       DateTime?   @map("listing_date") @db.Date
  listingPrice      Decimal?    @map("listing_price")
  sellingPrice      Decimal?    @map("selling_price")
  sellingDate       DateTime?   @map("selling_date") @db.Date
  status            String      @default("Sold on Listing")
  accountId         BigInt?     @map("account_id")
  account           IpoAccount? @relation(fields: [accountId], references: [id], onDelete: SetNull)
  notes             String?
  gmpAtApply        Decimal?    @map("gmp_at_apply")
  subscriptionTimes Decimal?    @map("subscription_times")
  createdAt         DateTime    @default(now()) @map("created_at")

  @@map("ipo_records")
}

model Capital {
  userId    String   @id @map("user_id")
  total     Decimal  @default(500000)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")

  @@map("capital")
}
